<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StoryApp" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@color/pastelOrange</item>
    </style>

    <style name="poppinsRegular">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="poppinsSemiBold">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="poppinsBold">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/purple</item>
    </style>
</resources>